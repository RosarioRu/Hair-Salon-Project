@{
  Layout = "_Layout";
}

@using HairSalon.Models


@if (@Model.Count == 0)
{
  <div class="center-no-stylists">
    <h4>No Stylists have been added to the system yet.</h4>
    <p>@Html.ActionLink("Add a Stylist", "Create")</p>
  </div>
} 
else
{
  <div class="center-stylists">
    <h2>Eau Claire's Stylists</h2>
    <ul>
      @foreach (Stylist stylist in Model)
      {
        <li>@Html.ActionLink($"{stylist.StylistFirstName}", "Details", new {id = stylist.StylistId} ) </li>
      }
    </ul>
    <p class="toright">@Html.ActionLink("Add a Stylist", "Create")</p>
  </div>
}





