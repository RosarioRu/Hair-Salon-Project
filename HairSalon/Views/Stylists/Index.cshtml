@{
  Layout = "_Layout";
}

@using HairSalon.Models


@if (@Model.Count == 0)
{
  <h4>No Stylists have been added to the system yet.</h4>
  <p>@Html.ActionLink("Add a Stylist", "Create")</p>
} 
else
{
  <div class="else">
    <ul>
      @foreach (Stylist stylist in Model)
      {
        <li>@Html.ActionLink("{stylist.StylistFirstName}", "Details", "{stylist.StylistId}")</li>
      }
    </ul>
    <p>testy test!</p>
  </div>
}





