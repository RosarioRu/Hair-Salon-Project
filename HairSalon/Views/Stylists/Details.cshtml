@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models


<div class="stylist-details">
<h2>@Html.DisplayFor(model => model.StylistFirstName)'s Details</h2>

<p>Last Name: @Html.DisplayFor(model => model.StylistLastName)</p>
@* <p>Specialty: @Html.DisplayFor(model => model.StylistSpecialty)</p> *@
<p>Specialty: @Model.StylistSpecialty</p>



@if (@ViewBag.HasClientsOrNot == null)
{
  <p>This Stylist has no clients yet - click @Html.ActionLink("here to add one", "Create", "Clients", new { id = @Model.StylistId }) </p>
  <p>@Html.ActionLink("Return to All Stylists", "Index")</p>
}
else
{
  <p>@Model.StylistFirstName's Clients: </p>
  <ul>
    @foreach (Client Client in @ViewBag.StylistClientsInListForm)
    {
      <li>@( $"{Client.ClientFirstName}" + " " + $"{Client.ClientLastName}")</li>
    }
  </ul>
  <br><p>@Html.ActionLink("Add another client for " + @Model.StylistFirstName, "Create", "Clients", new { id = @Model.StylistId })</p>
  <p>@Html.ActionLink("Back to all Stylists", "Index")</p>
  
}
</div>

  